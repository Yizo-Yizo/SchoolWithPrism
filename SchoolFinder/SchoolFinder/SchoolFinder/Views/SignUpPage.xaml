<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="SchoolFinder.Views.SignUpPage">
  <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Label Text="First Name" FontSize="Medium" FontAttributes="Bold" TextColor="Black" />
            <Entry  Placeholder="Enter First Name" Text="{Binding CurrentUser.FirstName}" />
            
            <Label Text="Last Name" FontSize="Medium" FontAttributes="Bold" TextColor="Black" />
            <Entry  Placeholder="Enter Last Name" Text="{Binding CurrentUser.LastName}" />

            <Label Text="Email" FontSize="Medium" FontAttributes="Bold" TextColor="Black" />
            <Entry  Placeholder="Enter Email" Text="{Binding CurrentUser.Email}" />

            <Label Text="Password" FontSize="Medium" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter Password" Text="{Binding CurrentUser.Password}" />

            <Label Text="Confirm Password" FontSize="Medium" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Confirm Password" Text="{Binding CurrentUser.ConfirmPassword}" />

            <Button Text="Sign Up" Command="{Binding ExecuteSignUpCommand}" TextColor="White"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#088da5" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>